@model Mecanica.API.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Sign in to start your session</p>

                <form  method="post">
                    <div class="input-group mb-3">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" placeholder="Usuario">
                        <span asp-validation-for="Username" class="text-warning"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <div class="input-group mb-3">
                        <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="Password">
                        <span asp-validation-for="Password" class="text-warning"></span>
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <label asp-for="Password"></label>
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="remember">
                                <span asp-validation-for="Password" class="text-warning"></span>
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" value="Iniciar Sesión" class="btn btn-primary btn-block">Sign In</button>
                            <a asp-action="Register" class="btn btn-primary">Registrar Nuevo Usuario</a>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

               
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
</body>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}